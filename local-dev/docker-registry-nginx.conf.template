# Docker Registry Proxy Configuration
upstream docker_registry {
    server docker-reverse-proxy:5000;
}

# HTTP server (redirects to HTTPS)
server {
    listen 80;
    server_name ${DOCKER_HOSTNAME} localhost;
    
    # Redirect all HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS server with self-signed certificate
server {
    listen 443 ssl http2;
    server_name ${DOCKER_HOSTNAME} localhost;

    # SSL configuration with self-signed certificate
    ssl_certificate /etc/nginx/certs/${DOCKER_HOSTNAME}.crt;
    ssl_certificate_key /etc/nginx/certs/${DOCKER_HOSTNAME}.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Docker registry specific settings
    client_max_body_size 0; # disable any limits to avoid HTTP 413
    chunked_transfer_encoding on;

    # Proxy all requests to docker-reverse-proxy
    location / {
        proxy_pass http://docker_registry;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Docker registry specific headers
        proxy_set_header Docker-Content-Digest $upstream_http_docker_content_digest;
        proxy_read_timeout 900;
    }
}